{
    "i18n": true,
    "type": "panel",
    "items": {
        "mail": {
            "type": "text",
            "label": "APP username (eMail)",
            "newLine": true,
            "sm": 3
        },
        "password": {
            "type": "password",
            "newLine": true,
            "repeat": false,
            "visible": true,
            "sm": 3,
            "label": "App Password"
        },
        "server": {
            "type": "select",
            "newLine": true,
            "sm": 3,
            "options": [
                {
                    "label": "Worx",
                    "value": "worx"
                },
                {
                    "label": "Kress",
                    "value": "kress"
                },
                {
                    "label": "Landxcape",
                    "value": "landxcape"
                },
                {
                    "label": "Ferrex",
                    "value": "ferrex"
                }
            ],
            "label": "App Name"
        },
        "edgeCutDelay": {
            "type": "number",
            "label": "delay for edge cut",
            "newLine": true,
            "default": 5000,
            "sm": 3
        },
        "meterMin": {
            "type": "checkbox",
            "label": "Distance and time in min and m",
            "newLine": true,
            "default": false,
            "sm": 3
        },
        "pingMqtt": {
            "type": "checkbox",
            "label": "Ping MQTT Connection every 10 minutes.",
            "newLine": true,
            "default": false,
            "sm": 3
        },
        "updateMqtt": {
            "type": "checkbox",
            "label": "Updating MQTT data after token update.",
            "newLine": true,
            "default": false,
            "sm": 3
        },
        "_headerAdapter": {
            "type": "header",
            "text": "vision setting",
            "size": 2
        },
        "vision_timeslots": {
            "type": "number",
            "label": "vision timeslots",
            "newLine": true,
            "default": 2,
            "min": 2,
            "max": 10,
            "step": 1,
            "sm": 3
        }
    }
}
